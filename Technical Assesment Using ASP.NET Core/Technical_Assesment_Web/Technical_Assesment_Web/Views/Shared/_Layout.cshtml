<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>

   
    <style>

        body {
            padding-top: 55px;
            font-family: 'Verdana','sans-serif';
        }

        .main {
            min-height: calc(100vh - 140px);
        }

        .navColor {
            background-color: #616B89;
        }
    </style>
    @RenderSection("styles", false)

</head>
<body>
    <nav class="navbar navbar-light navbar-expand-md shadow fixed-top navColor">
        <div class="container-fluid">
            <img src="~/Images/home_logo.jpg" width="70" style="margin-right: 20px;border-radius: 50%" />
            <span class="navbar-brand text-white">Inventory Management</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHide" aria-controls="navbarHide" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarHide">
                <ul class="navbar-nav">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a></li>
                    <li class="nav-item"><a asp-controller="InventoryProduct" asp-action="Index" class="nav-link text-white">Buy</a></li>
                </ul>

            </div>
        </div>
    </nav>
    <div class="main">
        @RenderBody()
    </div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
